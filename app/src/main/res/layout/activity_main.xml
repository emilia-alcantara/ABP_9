<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BABB8"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgBoton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#967E76"
        android:contentDescription="Icono que representa la silueta de un aviÃ³n."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"
        app:srcCompat="@drawable/baseline_airplanemode_active_24" />

    <ImageButton
        android:id="@+id/imgBoton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:background="#967E76"
        android:contentDescription="Icono que representa la silueta de un auto mirado desde el frente."
        app:layout_constraintBottom_toBottomOf="@+id/imgBoton1"
        app:layout_constraintStart_toEndOf="@+id/imgBoton1"
        app:layout_constraintTop_toTopOf="@+id/imgBoton1"
        app:srcCompat="@drawable/baseline_directions_car_24" />

    <ImageButton
        android:id="@+id/imgBoton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#967E76"
        android:contentDescription="Icono que representa una persona recostada en una cama."
        app:layout_constraintEnd_toEndOf="@+id/imgBoton1"
        app:layout_constraintStart_toStartOf="@+id/imgBoton1"
        app:layout_constraintTop_toBottomOf="@+id/imgBoton1"
        app:srcCompat="@drawable/baseline_hotel_24" />

    <ImageButton
        android:id="@+id/imgBoton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:background="#967E76"
        android:contentDescription="Icono que muestra dos utencilios, un tenedor y una cuchara."
        app:layout_constraintBottom_toBottomOf="@+id/imgBoton3"
        app:layout_constraintStart_toEndOf="@+id/imgBoton3"
        app:layout_constraintTop_toTopOf="@+id/imgBoton3"
        app:srcCompat="@drawable/baseline_dining_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>